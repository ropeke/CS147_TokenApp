    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:background="#A5FFFFFF"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/filter_button_div_width"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/me_toggle_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:background="@drawable/lock48_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/filter_button_div_width"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/friend_toggle_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:background="@drawable/multiple25_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/filter_button_div_width"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/public_toggle_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:background="@drawable/earth_blue" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>