<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/map"
        android:name="com.hcid.token.MapActivity"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        class="com.google.android.gms.maps.MapFragment" />
    
    <LinearLayout
            android:layout_width="@dimen/filter_button_div_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/filter_button_margin"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:background="#A5FFFFFF" >

            <ImageView
                android:id="@+id/profile_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:background="@drawable/profile9" />

    </LinearLayout>
    
   <LinearLayout
            android:layout_width="@dimen/action_button_div_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/action_button_margin_bottom"
            android:layout_marginEnd="@dimen/action_button_margin"
            android:background="#A5FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/camera_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:background="@drawable/camera59gray" />

        </LinearLayout>
        
   <LinearLayout
            android:layout_width="@dimen/action_button_div_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/action_button_margin_bottom"
            android:layout_marginStart="@dimen/action_button_margin"
            android:background="#A5FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/notification_button"
                android:layout_width="@dimen/filter_button_size"
                android:layout_height="@dimen/filter_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/filter_button_margin"
                android:layout_marginBottom="@dimen/filter_button_margin"
                android:background="@drawable/pin56_gray" />

        </LinearLayout>
    

