<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:background="#FFFFFF"
	    android:orientation="horizontal">

	    <LinearLayout 
	        android:layout_width="60dp"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	        
	        <Button
	            android:id="@+id/me_toggle_button" 
	        	android:layout_width="50dp"
	        	android:layout_height="50dp"
	        	android:layout_marginTop="20dp"
	        	android:background="@drawable/lock48_red"
	        	android:layout_gravity="center_horizontal"/>
	        
	        <TextView
	            android:id="@+id/me_toggle_button_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/me_icon_label"
	            android:textColor="@color/TokenRed"
	            android:textSize="10sp"
	            android:textStyle="bold" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="60dp"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	        
	        <Button
	            android:id="@+id/friend_toggle_button" 
	        	android:layout_width="50dp"
	        	android:layout_height="50dp"
	        	android:layout_marginTop="20dp"
	        	android:background="@drawable/multiple25_green"
	        	android:layout_gravity="center_horizontal"/>
	        
	        <TextView
	            android:id="@+id/friend_toggle_button_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/friends_icon_label"
	            android:textColor="@color/TokenGreen"
	            android:textSize="10sp"
	            android:textStyle="bold" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="60dp"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	        
	        <Button
	            android:id="@+id/public_toggle_button" 
	        	android:layout_width="50dp"
	        	android:layout_height="50dp"
	        	android:layout_marginTop="20dp"
	        	android:background="@drawable/earth_blue"
	        	android:layout_gravity="center_horizontal"/>
	        
	        <TextView
	            android:id="@+id/public_toggle_button_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/public_icon_label"
	            android:textColor="@color/TokenBlue"
	            android:textSize="10sp"
	            android:textStyle="bold" />
	        
	    </LinearLayout>

	    <LinearLayout
	        android:layout_marginStart="65dp"
	        android:layout_width="100dp"
	        android:layout_height="50dp"
	        android:orientation="vertical"
	        android:background="#d3d3d3"
	        android:layout_gravity="center_vertical">
	        
	        <Button
		        android:id="@+id/search_button"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginStart="15dp"
		        android:background="@drawable/magnifier12" />
	        
	    </LinearLayout>

	</LinearLayout>     
     
     <fragment
        android:id="@+id/map"
        android:name="com.hcid.token.MapActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="com.google.android.gms.maps.MapFragment" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <Button
                android:id="@+id/profile_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile9"
                android:layout_gravity="center_horizontal">
            </Button>
            
            <TextView 
                android:text="@string/profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
            
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <Button
                android:id="@+id/camera_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/camera59"
                android:layout_gravity="center_horizontal">
            </Button>
            
            <TextView 
                android:text="@string/camera_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
            
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
