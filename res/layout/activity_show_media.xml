<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hcid.token.ShowMediaActivity" >

    <ImageView
        android:id="@+id/media_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="20dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <Button
                android:id="@+id/thumbs_down"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/thumb52_dislike_grey"
	            android:layout_gravity="center_horizontal" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
        	<Button
        	    android:id="@+id/thumbs_up"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginTop="10dp"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/thumb52_like_grey" />
            
        </LinearLayout>
        
        
        
    </LinearLayout>

</LinearLayout>
